@model PousadaIdentity.Entities.Pessoa

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<div style="width:450px;background-color:#FFFF;position:relative;top:20px;border-radius:10px;
    top:20px;margin-left:auto;margin-right:auto;height:380px;">

    <h1 style="position:relative;margin-left:auto;margin-right:auto;margin:0;text-align:center;
    background-color:#DFA67B;color:white;border-top-left-radius:10px;border-top-right-radius:10px;">
        Deletar Pessoa
    </h1>
    <hr style="position:relative;bottom:16px;" />

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="row">
  
    <dl>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Senha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario)
        </dd>
    </dl>


    @if (Model.Email == "master@example.com")
    {
        <div style="position:relative;text-align: center;position:relative;">
        <p style="color:red;font-size:20px;">Este usuário não pode ser excluído.</p>
        </div>
    }
    else
    {
        <div style="position:relative;text-align: center;position:relative;">
        <form asp-action="Delete">
            <input type="hidden" asp-for="PessoaId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
            <a asp-action="Index" class="btn btn-danger">Voltar</a>
            <input type="submit" value="Deletar" class="btn btn-danger" /> 
        </form>
        </div>
    }
</div>
</div>
@model PousadaIdentity.Entities.Quarto

@{
    ViewData["Title"] = "Details";
}

<div style="width:600px;background-color:#FFFF;position:relative;top:20px;border-radius:10px;
    top:20px;margin-left:auto;margin-right:auto;height:750px;">

<h1 style="position:relative;margin-left:auto;margin-right:auto;margin:0;text-align:center;
    background-color:#DFA67B;color:white;border-top-left-radius:10px;border-top-right-radius:10px;">
    Detalhes do Quarto
</h1>
<hr style="position:relative;bottom:16px;" />

<div>
    <dl>

        <center>
            <div class="col-sm-10">
                <div style="max-width: 400px; margin: 0 auto;">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Imagem)" style="width: 100%; max-width: 400px; height: 300px;" />
                </div>
            </div>
            </center>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Disponibilidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disponibilidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArCondicionado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArCondicionado)
        </dd>
        <dt class = "col-sm-10">
            Preço Diario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>

    </dl>
</div>
    <div style ="position:relative;text-align: center;">
    <a asp-action="Index" class="btn" style="background-color:#dc3545;color:#fff;">Voltar</a>
    <a asp-action="Edit" asp-route-id="@Model?.QuartoId" class="btn btn-primary" style="width:70px;">Editar</a> 
    </div>
</div>

@model PousadaIdentity.Entities.Quarto

@{
    ViewData["Title"] = "Edit";
}
<div style="width:500px;background-color:#FFFF;position:relative;top:20px;border-radius:10px;
    top:20px;margin-left:auto;margin-right:auto;height:590px;">

<h1>Edit</h1>

<h4>Quarto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
    <h1 style="position:relative;margin-left:auto;margin-right:auto;margin:0;text-align:center;
    background-color:#DFA67B;color:white;border-top-left-radius:10px;border-top-right-radius:10px;">
        Editar Quarto
    </h1>
    <hr style="position:relative;bottom:16px;"/>

<div>
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuartoId" />
            <div class="form-group">
                <label asp-for="Imagem" class="control-label"></label>
                <input asp-for="Imagem" type="file" class="form-control" />
                <input asp-for="Imagem" type="file" class="form-control" accept=".jpg, .jpeg, .png, .gif, .bmp"  />
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disponibilidade" class="control-label"></label>
                <input asp-for="Disponibilidade" class="form-control" />
                <span asp-validation-for="Disponibilidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArCondicionado" class="control-label"></label>
                <input asp-for="ArCondicionado" class="form-control" />
                <span asp-validation-for="ArCondicionado" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Tipo" class="control-label"></label>
                    <select asp-for="Tipo" class="form-control">
                        <option value="Quarto de Solteiro">Quarto de Solteiro</option>
                        <option value="Quarto Duplo">Quarto Duplo</option>
                        <option value="Quarto Triplo">Quarto Triplo</option>
                        <option value="Quarto de Casal">Quarto de Casal</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArCondicionado" class="control-label"></label>
                    <select asp-for="ArCondicionado" class="form-control">
                        <option value="Possui">Possui</option>
                        <option value="Não-Possui">Não-Possui</option>
                    </select>
                    <span asp-validation-for="ArCondicionado" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>


                <div class="form-group" style="position:relative;text-align: center;">
                    <a asp-action="Index" class="btn" style="background-color:#dc3545;color:#fff;">Voltar</a>
                    <input type="submit" value="Save" class="btn btn-success" width="width:70px;" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
